<h1 class="mb-4">User Management</h1>

<a href="/users/create" class="btn btn-primary mb-3">
  <i class="bi bi-plus-circle"></i> Add New User
</a>

<div class="card">
  <div class="card-header">
    User List
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead class="table-light">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
              <td>
                <a href="/users/edit/<%= user.id %>" class="btn btn-sm btn-warning">
                  <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a href="/users/delete/<%= user.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">
                  <i class="bi bi-trash"></i> Delete
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
